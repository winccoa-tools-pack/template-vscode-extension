  "license": "MIT",
  "icon": "resources/vscode-<your-repository>-icon.png",
  "categories": [
    "Other"
  ],
  "keywords": [
    "wincc-oa",
    "scada",
    "hmi",
    "siemens",
    "etm",
    "industrial",
    "automation"
  ],
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/winccoa-tools-pack/<your-repository>"
  },
  "bugs": {
    "url": "https://github.com/winccoa-tools-pack/<your-repository>/issues"
  },
  "homepage": "https://github.com/winccoa-tools-pack/<your-repository>#readme",
  "engines": {
    "vscode": "^1.96.0"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onStartupFinished",
    "onCommand:winccoa.<yourExtensionCommand>"
  ],
  "contributes": {
    "commands": [
      {
        "command": "winccoa.<yourExtensionCommand>",
        "title": "WinCC OA: Run <Your Command>"
      }
    ]
  },
  "extensionDependencies": [
    "RichardJanisch.winccoa-project-admin"
  ],
  "dependencies": {
    "@winccoa-tools-pack/npm-winccoa-core": "^0.1.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.0",
    "@eslint/js": "^9.39.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@vscode/vsce": "^3.7.1",
    "@winccoa-tools-pack/npm-winccoa-core": "^0.1.1",
    "copyfiles": "^2.4.1",
    "eslint": "^9.39.2",
    "glob": "^13.0.0",
    "markdownlint-cli": "^0.47.0",
    "mocha": "^11.7.5",
    "prettier": "^3.3.3",
    "source-map": "^0.8.0-beta.0",
    "ts-loader": "^9.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run copy-fixtures",
    "copy-fixtures": "copyfiles -u 1 \"src/test/fixtures/**/*\" out/",
    "build": "npm run compile",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint && npm run lint:md && npm run format:check",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "lint:md": "markdownlint \"**/*.md\" --ignore node_modules",
    "lint:md:fix": "markdownlint \"**/*.md\" --ignore node_modules --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "vscode-test",
    "test:unit": "npm test",
    "test:integrationt": "vscode-test --suite integration",
    "ci:integration": "npm ci && npm run compile && npm run test:integrationt",
    "style-check": "npm run format:check && npm run lint"
  }
}
