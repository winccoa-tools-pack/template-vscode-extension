{
  "name": "winccoa-vscode-extension",
  "displayName": "WinCC OA Tools (template)",
  "publisher": "winccoa-tools-pack",
  "version": "0.1.3",
  "author": "winccoa-tools-pack",
  "license": "MIT",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "dist/extension.js",
  "scripts": {
    "build": "tsc --build",
    "compile": "tsc --build",
    "prepublishOnly": "npm run build",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "lint:md": "markdownlint \"**/*.md\" --ignore node_modules",
    "lint:md:fix": "markdownlint \"**/*.md\" --ignore node_modules --fix",
    
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "format:md": "prettier --write \"**/*.md\"",
    "format:md:check": "prettier --check \"**/*.md\"",
    "style-check": "npm run lint && npm run format:check && npm run lint:md && npm run format:md:check",
    "style-fix": "npm run lint:fix && npm run format && npm run lint:md:fix && npm run format:md",
    "test": "npm run style-check && npm run compile && node ./dist/test/runTest.js",
    "test:integration": "npm run build && node ./dist/test/runTest.js",
    "ci:integration": "npm ci && npm run test:integration",
    "watch": "tsc --build --watch",
    "package": "vsce package",
    "vscode:prepublish": "npm run compile"
  },
  "devDependencies": {
    "typescript": "^5.2.0",
    "@types/vscode": "^1.107.0",
    "@types/node": "^25.0.3",
    "@types/mocha": "^10.0.6",
    "@vscode/vsce": "^3.7.1",
    "@vscode/test-electron": "^2.3.9",
    "mocha": "^11.7.5",
    "glob": "^13.0.0",
    "eslint": "^9.39.2",
    "@typescript-eslint/parser": "^8.51.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "prettier": "^2.8.8",
    "markdownlint-cli": "^0.36.0"
  }
}
