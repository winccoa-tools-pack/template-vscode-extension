
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",            // webpack handles module bundling
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "out",
    "types": ["node", "vscode"]
  },
  "include": ["src/**/*"]
}
